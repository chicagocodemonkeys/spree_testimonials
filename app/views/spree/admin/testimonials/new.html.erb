<%= form_for :testimonial, :url => admin_testimonials_path do |f| %>
  <%= f.label :quote, 'Testimonial' %><br />
  <%= f.text_area :quote, { :rows => 2 } %><br /><br />
  
  <%= f.label :author, 'Author' %><br />
  <%= f.text_field :author_name %><br /><br />
  
  <%= f.label :location, 'Author Location' %><br />
  <%= f.text_field :location %><br /><br />
  
  <%= f.submit 'Save' %>
<% end %>